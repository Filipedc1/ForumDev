@model ForumDev.ViewModels.Forum.ForumTopicViewModel

<h1>Welcome to the @Model.Forum.Title Forum</h1>

<span id="headingBtn">
    <a asp-controller="Post"
       asp-action="Create"
       asp-route-id="@Model.Forum.Id" class="btn btn-newPost">
        Create Post
    </a>
</span>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover" id="postsTable">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            There are no @Model.Forum.Title posts yet. <br/><br/>
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>Create one now</span>
            </a>
        </h3>
    </div>
}